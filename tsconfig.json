{
    "compilerOptions": {
        "module": "commonjs",
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"],
    "lib": ["es2015"]
}
